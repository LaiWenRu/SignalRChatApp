@using SignalR.ViewModels;

@inject ChatViewModel ChatViewModel;

@{
    ViewData["Title"] = "Home Page";
}
<div id="chatBox">
    <div class="container">
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-2">UserId: {{selectedUserId}}</div>
            <div class="col-4">
                <select v-model="selectedUserId">
                    <option v-for="user in userList" :value="user.id">{{user.name}}</option>
                </select>
            </div>
            <div class="col-3">
                <input type="button" id="loginButton" value="Log In" v-on:click="logIn()" />
            </div>
        </div>
        <div class="row">
            <div class="col-2">Message</div>
            <div class="col-4"><input type="text" id="messageInput" /></div>
            <div class="col-6">
                <input type="button" id="sendButton" value="Send Message" />
            </div>
        </div>
        <div class="row">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
<script src="https://unpkg.com/vue@next"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

<script>
    const chatBox = Vue.createApp({
        data() {
            return {
                userList: null,
                selectedUserId: '',
            }
        },
        methods: {
            logIn: function() {
                console.log(this.selectedUserId);
            }
        },
        mounted() {
            axios.get('/ChatAPI/UserListExamples')
                .then(response => this.userList = response.data)
                .catch(function (error) {
                    console.log(error);
                });
        }
    }).mount('#chatBox');
</script>